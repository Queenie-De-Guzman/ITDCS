@model MyApp.Models.MusicModel

<h2>Delete Music</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Title:</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Artist:</dt>
        <dd class="col-sm-10">@Model.Artist</dd>

        <dt class="col-sm-2">Album:</dt>
        <dd class="col-sm-10">@Model.Album</dd>

        <dt class="col-sm-2">Cover Image:</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" width="150" height="150" />
            }
        </dd>

        <dt class="col-sm-2">Music File:</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.AudioPath))
            {
                <audio controls>
                    <source src="@Model.AudioPath" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
