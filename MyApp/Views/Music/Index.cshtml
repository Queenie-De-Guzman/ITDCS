@model IEnumerable<MyApp.Models.MusicModel>

<h2>Music List</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Album</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Cover</th>
            <th>Preview</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Artist</td>
                <td>@item.Album</td>
                <td>@item.Genre</td>
                <td>@item.Year</td>
                <td class="text-center">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="Cover" width="50" height="50" class="rounded" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/50" alt="No Cover" class="rounded" />
                    }
                </td>
                <td class="text-center">
                    @if (!string.IsNullOrEmpty(item.AudioPath))
                    {
                        <audio controls style="width:100px;">
                            <source src="@item.AudioPath" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                    }
                    else
                    {
                        <span class="text-muted">No Audio</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Music</a>
